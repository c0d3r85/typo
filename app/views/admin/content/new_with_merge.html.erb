	<h3>
		<%= _("Merge Articles") %>
	</h3>
<!-- <input id='merge_with' type="text" value="" name='merge_with' class='btn info' /> -->
<%= label(:article, 'Article ID') %>
<%= text_field_tag "merge_with" %>
      <input id='submit_merge' type="submit" value="<%= _('Merge Articles') %>" name="submit_merge" class='btn info' />

<% end %>
